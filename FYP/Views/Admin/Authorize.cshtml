@model IEnumerable<FYP.Models.UserInfo>

@{
    ViewData["Title"] = "Authorize";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var FileId = ViewData["FileId"];
}

<h1>Authorize</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                User ID
            </th>
            <th>
                User Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccess.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <form asp-action="AuthorizeAction" asp-route-FileId="@FileId" asp-route-UserId="@item.UserAccess.UserId">
                        <input type="submit" value="Authorize" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

