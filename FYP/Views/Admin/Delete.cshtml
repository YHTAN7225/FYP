@model FYP.Models.RetrievedFileViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RetrievedFile.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RetrievedFile.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RetrievedFile.Properties.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RetrievedFile.Properties.LastModified.GetValueOrDefault().ToLocalTime().DateTime)
        </dd>
    </dl>

    <form asp-action="DeleteFile" asp-route-FileName="@Model.RetrievedFile.Name">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>


